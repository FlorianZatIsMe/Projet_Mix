<Page x:Class="Main.Pages.Parameters"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Main.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Parameters"
      Foreground="AliceBlue">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="50"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <TextBlock Text="Paramètres" FontSize="20" VerticalAlignment="Center" HorizontalAlignment="Center"/>

        <WrapPanel Grid.Row="1">
            <TextBlock Text="Prochaine calibration: "/>
            <DatePicker x:Name="dpNextCalibDate" Margin="10,0,0,0" PreviewMouseDown="dpNextCalibDate_PreviewMouseDown" LayoutUpdated="dpNextCalibDate_LayoutUpdated"/>
        </WrapPanel>
    </Grid>
</Page>
