<Page x:Class="Main.Pages.SubCycle.CycleInfo"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Main.Pages.SubCycle"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="600"
      Title="CycleInfo"
      Background="#524E4F">

    <Grid>
        <StackPanel x:Name="StackMain" Margin="20">
            <WrapPanel>
                <TextBlock Text="Numéro OF: " Foreground="Wheat"/>
                <TextBlock x:Name="labelOFNumber" Text="#" Foreground="Wheat"/>
                <TextBlock Text="Produit: " Margin="20,0,0,0" Foreground="Wheat"/>
                <TextBlock x:Name="labelRecipeName" Text="#" Foreground="Wheat" Margin="10,0,0,0"/>
                <TextBlock Text="Version recette: " Margin="20,0,0,0" Foreground="Wheat"/>
                <TextBlock x:Name="labelRecipeVersion" Text="#" Foreground="Wheat"/>
                <TextBlock Text="Masse produit final: " Margin="20,0,0,0" Foreground="Wheat"/>
                <TextBlock Name="labelFinalWeight" Text="#" Foreground="Wheat"/>
            </WrapPanel>
        </StackPanel>

    </Grid>
</Page>
