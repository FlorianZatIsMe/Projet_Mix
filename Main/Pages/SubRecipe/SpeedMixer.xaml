                    <TextBlock Margin="0,10,0,0" Text="Vitesse - Min (rpm)"/>
                    <TextBox x:Name="tbSpeedMin" Margin="23,10,0,0" Width="50" LostFocus="TbSpeedMin_LostFocus"/>
                    <TextBlock Margin="20,10,0,0" Text="Max (rpm)"/>
                    <TextBox x:Name="tbSpeedMax" Margin="15,10,0,0" Width="50" LostFocus="TbSpeedMax_LostFocus"/>
                </WrapPanel>
                <WrapPanel>
                    <TextBlock Margin="0,10,0,0">
                        <Run Text="Pression - Min ("/><Run Text="{Binding ElementName=cbxPressureUnit, Path=Text}"/><Run Text=")"/>
                    </TextBlock>
                    <TextBox x:Name="tbPressureMin" Margin="10,10,0,0" Width="50" LostFocus="TbPressureMin_LostFocus"/>
                    <TextBlock Margin="20,10,0,0">
                        <Run Text="Max ("/><Run Text="{Binding ElementName=cbxPressureUnit, Path=Text}"/><Run Text=")"/>
                    </TextBlock>
                    <TextBox x:Name="tbPressureMax" Margin="10,10,0,0" Width="50" LostFocus="TbPressureMax_LostFocus"/>
                </WrapPanel>
