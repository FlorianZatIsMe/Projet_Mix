      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Main.Pages.SubRecipe"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="1300"
      Title="SpeedMixer"
      Background="Transparent"
      Foreground="{StaticResource MyFont1_Foreground}"
      FontFamily="{StaticResource MyFont1}"
      FontSize="{StaticResource FontSize2}"
    xmlns:theme="clr-namespace:Microsoft.Windows.Themes;assembly=PresentationFramework.Aero2">

    <Border Background="#524E4F" BorderThickness="5" BorderBrush="Green" CornerRadius="15" Margin="5">
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="100"/>
                <ColumnDefinition Width="400"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <Grid.RowDefinitions>
                <RowDefinition Height="55"/>
                <RowDefinition Height="30"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <StackPanel Grid.Column="0" Grid.RowSpan="3" HorizontalAlignment="Center" VerticalAlignment="Center">
                <TextBlock x:Name="tbSeqNumber"
                       Grid.Column="0"
                       Grid.RowSpan="2"
                       Text="#" 
                       Foreground="{StaticResource MyFont1_Foreground}"
                       FontFamily="{StaticResource MyFont1}"
                       FontSize="{StaticResource FontSize0}"
                       HorizontalAlignment="Center"/>
                <Button Grid.Column="0"
                    Grid.RowSpan="2"
                    Content="Supprimer"
                    Margin="0,10,0,0"
                    Height="20"
                    Width="70" Click="Button_Click"/>
            </StackPanel>

            <WrapPanel Grid.Column="1" Grid.ColumnSpan="2" Grid.Row="0" Margin="0,10,0,0" VerticalAlignment="Top">
                <RadioButton 
                        Content="Pesée"
                        Style="{DynamicResource SubSeqRadioButton}"
                       
                         HorizontalAlignment="Left" 
                         VerticalAlignment="Top" 
                         Click="RadioButton_Click_1"/>
                <RadioButton 
                        Content="SpeedMixer"
                        Style="{DynamicResource SubSeqRadioButton}"         
                       
                         HorizontalAlignment="Left"
                         Margin="10,0,0,0"
                         VerticalAlignment="Top" 
                         IsChecked="True"/>
            </WrapPanel>

            <Grid HorizontalAlignment="Left" Width="400" Grid.Column="1" Grid.Row="1" VerticalAlignment="Top" Margin="0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                <TextBlock Text="Nom du programme"
                                   Margin="0,0,20,0"
                                   Grid.Column="0"
                                   FontFamily="{StaticResource MyFont1}" 
                                   FontSize="{StaticResource FontSize1}"
                                   VerticalAlignment="Center"/>
                <TextBox x:Name="tbProgramName" 
                             Grid.Column="1"
                             Height="30" 
                             VerticalContentAlignment="Center"
                             LostFocus="TbProgramName_LostFocus"
                             Style="{DynamicResource TextBoxStyle1}"/>
            </Grid>

            <StackPanel Grid.Column="1" Grid.Row="2">
                <WrapPanel>
                    <TextBlock Margin="0,10,0,0" Text="Accélération (rpm/s)"/>
                    <TextBox x:Name="tbAcceleration" Margin="10,10,0,0" Width="200" LostFocus="TbAcceleration_LostFocus"/>
                </WrapPanel>
                <WrapPanel>
                    <TextBlock Margin="0,10,0,0" Text="Décélération (rpm/s)"/>
                    <TextBox x:Name="tbDeceleration" Margin="10,10,0,0" Width="200" LostFocus="TbDeceleration_LostFocus"/>
                </WrapPanel>

                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="30"/>
                    </Grid.RowDefinitions>
                    <ToggleButton x:Name="cbVacuum" Width="130" VerticalAlignment="Center" HorizontalAlignment="Left" Content="Contrôle du vide" Style="{StaticResource ToggleButtonStyle1}"/>
                    <WrapPanel VerticalAlignment="Center" HorizontalAlignment="Right">
                        <TextBlock Margin="0,10,0,0" Text="Unité de la pression"/>
                        <ComboBox Style="{DynamicResource ComboBoxStyle1}" Margin="10,0,0,0" x:Name="cbxPressureUnit" SelectedIndex="2" Width="70">
                            <ComboBoxItem Content="inHg"/>
                            <ComboBoxItem Content="Torr"/>
                            <ComboBoxItem Content="mBar"/>
                            <ComboBoxItem Content="PSIA"/>
                        </ComboBox>
                    </WrapPanel>
                </Grid>
