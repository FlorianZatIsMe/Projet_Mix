<Page x:Class="Main.Pages.ActiveAlarms"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Main.Pages"
      xmlns:p="clr-namespace:Main.Properties"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="ActiveAlarms">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="80" />

            <RowDefinition Height="1*" />
        </Grid.RowDefinitions>

        <Button x:Name="btAck" 
                Content="{Binding Source={x:Static p:Settings.Default}, Path=ActiveAlarm_AckButton}"  
                Style="{DynamicResource ButtonStyle1}"
                VerticalAlignment="Center" 
                HorizontalAlignment="Left" 
                Margin="20" 
                Click="ButtonAckAll_Click" />

        <DataGrid Grid.Row="1" Name="dataGridAlarms"
                  FontSize="{DynamicResource FontSize_ListBox1}"
                  Loaded="dataGridAlarms_Loaded"/>
    </Grid>
</Page>
